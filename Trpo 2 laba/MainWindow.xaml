<Window x:Class="Trpo_2_laba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trpo_2_laba"
        mc:Ignorable="d"
        Icon="https://cdn-icons-png.flaticon.com/512/850/850785.png"
        Title="Ключица" Height="450" Width="400" Background="DodgerBlue">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#FFCC8181"></Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border 
            BorderThickness="1"
            BorderBrush="Black"
            VerticalAlignment="Center"
                Grid.ColumnSpan="2"
            HorizontalAlignment="Center">
            <StackPanel
            >
                <TextBlock 
                Background="#FFED8787"
                TextAlignment="Center"
                FontSize="18"
                Text="Выберите товар..."
                x:Name="dispTB"/>

            </StackPanel>
        </Border>
        <Border 
            BorderThickness="1"
            BorderBrush="Black"
            VerticalAlignment="Center"
            Grid.Column="2"
                Grid.ColumnSpan="2"
            HorizontalAlignment="Center">
            <StackPanel
            >
                <TextBlock 
                Background="#FFED8787"
                TextAlignment="Center"
                FontSize="18"
                Text="Баланс..."
                x:Name="disp_rubTB"/>

            </StackPanel>
        </Border>
        <StackPanel
            HorizontalAlignment="Center"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            >
            <TextBlock 
                TextAlignment="Center"
                FontSize="18"
                Text="Ассортимент"
               />
            <Button x:Name="water_gas_5" Click="water_gas_5_Click"
                
                >Вода с газом 0.5л</Button>
            <Button x:Name="water_ungas_5" Click="water_ungas_5_Click">Вода без газа 0.5л</Button>
            <Button x:Name="water_gas_1" Click="water_gas_1_Click">Вода с газом 1л</Button>
            <Button x:Name="water_ungas_1" Click="water_ungas_1_Click">Вода без газа 1л</Button>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2"
                    >
            <TextBlock 
                TextAlignment="Center"
                FontSize="18"
                Text="Принимаем:"
               />
            
            <WrapPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                
                Width="150"
                >
                
                <Button Click="Button_Click_1">100р</Button>
                <Button Click="Button_Click_1">50р</Button>
                <Button Click="Button_Click_1">10р</Button>
                <Button Click="Button_Click_1">5р</Button>
                <Button Click="Button_Click_1">2р</Button>
                <Button Click="Button_Click_1">1р</Button>
            </WrapPanel>
        </StackPanel>
        <Button
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Grid.Row="2"
            Height="30"
            Width="auto"
            x:Name="clearBTN" Click="clearBTN_Click"
            
            >Возврат</Button>
        <Button
            Grid.Column="2"
            Grid.ColumnSpan="1"
            Grid.Row="2"
            Height="30"
            Width="auto"
            x:Name="payBTN" Click="payBTN_Click"
            
            >Оплатить</Button>
    </Grid>
</Window>
